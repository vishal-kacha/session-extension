{
  "manifest_version": 2,
  "name": "Workflow Session Manager",
  "version": "1.0",
  "description": "Save and restore browser tab sessions with custom names",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Workflow Session Manager"
  },
  "icons": {
    "48": "icon.png"
  }
}
